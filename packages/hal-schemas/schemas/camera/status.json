{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tafy.studio/schemas/hal/camera/status/1.0",
  "title": "Camera Status",
  "description": "Status information for a camera device",
  "type": "object",
  "required": ["camera_id", "status"],
  "properties": {
    "camera_id": {
      "type": "string",
      "description": "Unique identifier for this camera on the device"
    },
    "status": {
      "type": "string",
      "enum": ["ready", "streaming", "error", "disconnected"],
      "description": "Current camera status"
    },
    "resolution": {
      "type": "string",
      "pattern": "^[0-9]+x[0-9]+$",
      "description": "Current resolution"
    },
    "fps": {
      "type": "integer",
      "minimum": 0,
      "description": "Current frames per second"
    },
    "frame_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total frames captured"
    },
    "error_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total capture errors"
    },
    "last_error": {
      "type": "string",
      "description": "Last error message"
    },
    "stream_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to access the video stream"
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "resolutions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+x[0-9]+$"
          },
          "description": "Supported resolutions"
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Supported video formats"
        },
        "max_fps": {
          "type": "integer",
          "description": "Maximum supported FPS"
        }
      }
    }
  },
  "additionalProperties": false
}