{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tafy.studio/schemas/hal/envelope/v1.0",
  "title": "HAL Message Envelope",
  "description": "Standard envelope for all HAL messages in Tafy Studio",
  "type": "object",
  "required": ["hal_major", "hal_minor", "schema", "device_id", "caps", "ts", "payload"],
  "properties": {
    "hal_major": {
      "type": "integer",
      "description": "Major version of HAL specification (breaking changes)",
      "minimum": 1
    },
    "hal_minor": {
      "type": "integer",
      "description": "Minor version of HAL specification (additions only)",
      "minimum": 0
    },
    "schema": {
      "type": "string",
      "description": "Full schema identifier for payload",
      "pattern": "^[a-z]+(/[a-z]+)+/[0-9]+\\.[0-9]+$",
      "examples": ["tafylabs/hal/motor/differential/1.0"]
    },
    "device_id": {
      "type": "string",
      "description": "Unique device identifier",
      "pattern": "^[a-z0-9-]+$",
      "examples": ["esp32-a4cf12", "pi-001", "jetson-nano-42"]
    },
    "caps": {
      "type": "array",
      "description": "Array of capability strings with versions",
      "items": {
        "type": "string",
        "pattern": "^[a-z]+\\.[a-z]+(\\.[a-z]+)*:v[0-9]+\\.[0-9]+(:[a-z]+=[a-zA-Z0-9]+)*$"
      },
      "examples": [
        ["motor.differential:v1.0", "sensor.range.tof:v1.0"],
        ["motor.differential:v1.0:priority=high", "sensor.range.tof:v1.0:count=3"]
      ]
    },
    "ts": {
      "type": "string",
      "description": "ISO 8601 timestamp",
      "format": "date-time",
      "examples": ["2024-03-14T10:30:00.000Z"]
    },
    "payload": {
      "type": "object",
      "description": "The actual message data conforming to the specified schema"
    }
  },
  "additionalProperties": false
}