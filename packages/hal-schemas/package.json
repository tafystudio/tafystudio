{
  "name": "@tafy/hal-schemas",
  "version": "0.0.1",
  "description": "Hardware Abstraction Layer schemas for Tafy Studio",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run generate:types && pnpm run generate:python && tsc",
    "test": "jest",
    "generate:types": "tsx scripts/generate-types.ts",
    "generate:python": "python scripts/generate-python-types.py",
    "validate": "tsx scripts/validate-schemas.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "robotics",
    "hal",
    "schemas",
    "tafy"
  ],
  "author": "Tafy Studio",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3"
  }
}
