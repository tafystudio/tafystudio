# Tafy Studio Hub API Configuration

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Tafy Studio Hub"
VERSION=0.0.1

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3000,https://tafy.local

# NATS Settings
NATS_URL=nats://localhost:4222
# NATS_USER=
# NATS_PASSWORD=

# Database Settings (optional - uses in-memory if not set)
# DATABASE_URL=postgresql://user:password@localhost/tafystudio

# Redis Settings (optional)
# REDIS_URL=redis://localhost:6379

# Security Settings
SECRET_KEY=change-this-in-production-to-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json